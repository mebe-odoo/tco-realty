<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_realty_tenancy" model="ir.actions.report">
            <field name="name">Realty Tenancy Report</field>
            <field name="model">realty.tenancy</field>
            <field name="binding_model_id" ref="model_realty_tenancy"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">realty_management.tenancy_document</field>
            <field name="report_file">realty_management.tenancy_document</field>
            <field name="print_report_name">object.name + '.pdf'</field>
            <field name="binding_type">report</field>
        </record>

        <template id="tenancy_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <h1 class="mb-5" t-out="o.name" />

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>