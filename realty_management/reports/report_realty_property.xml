<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_realty_property" model="ir.actions.report">
            <field name="name">Realty Property Report</field>
            <field name="model">realty.property</field>
            <field name="binding_model_id" ref="model_realty_property"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">realty_management.property_document</field>
            <field name="report_file">realty_management.property_document</field>
            <field name="print_report_name">object.name + '.pdf'</field>
            <field name="binding_type">report</field>
        </record>

        <template id="property_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <h1 class="mb-5" t-out="o.name" />

                            <div class="container">
                                <div class="row">
                                    <div class="col-4">
                                        <h4>Construction Date:</h4>
                                        <t t-out="o.construction_date"/>
                                    </div>
                                    <div class="col-4">
                                        <h4>Rent Price:</h4>
                                        <t t-out="o.rent"/>
                                    </div>
                                    <div class="col-4">
                                        <h4>Surface:</h4>
                                        <t t-out="o.surface"/>
                                    </div>
                                </div>
                                <div class="row">
                                     <div class="col-4">
                                        <h4 class="test-class">Number of Rooms:</h4>
                                        <t t-out="len(o.room_ids)"/>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="test-class">Parking Spots:</h4>
                                        <t t-out="o.parking_spots"/>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="test-class">Furnishing:</h4>
                                        <t t-if="o.is_furnished">
                                            Furnished
                                        </t>
                                        <t t-else="">
                                            Unfurnished
                                        </t>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>