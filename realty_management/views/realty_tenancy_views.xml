<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="realty_tenancy_form" model="ir.ui.view">
    <field name="name">realty.tenancy.form</field>
    <field name="model">realty.tenancy</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button class="btn btn-secondary" confirm="Are you sure you wish to cancel?" string="Cancel" type="object" name="action_cancel" attrs="{'invisible': [('state', '!=', 'active')]}" />
          <button class="btn btn-primary" string="Confirm" type="object" name="action_confirm" attrs="{'invisible': [('state', '!=', 'draft')]}" />
          <field name="state" widget="statusbar" statusbar_visible="active,done" />
        </header>
        <sheet>
          <div class="oe_button_box">
              <button class="oe_stat_button" type="object" name="action_open_portal"
                      icon="fa-link" string="View on Portal"/>
          </div>
          <div class="oe_title" colspan="4">
            <h1>
              <field name="name" readonly="1" />
            </h1>
          </div>
          <group>
            <group>
              <field name="property_id" />
              <field name="date_start" />
              <field name="date_end" />
            </group>
          </group>
          <notebook>
            <page name="tenancy_lines" string="Tenancy Lines">
              <field name="tenancy_line_ids" nolabel="1">
                <tree editable="bottom">
                  <field name="product_id" />
                  <field name="quantity" />
                  <field name="price_unit" />
                  <field name="amount_total" />
                  <!--  Make Button visible only if in edit more
                  <button class="btn btn-primary o_edit_only" icon="fa-flag" type="object" name="action_click_me"
                          attrs="{'invisible': [('amount_total', '&lt;', 100)]}" string="Edit Me"/> -->
                  <!--  Make Button visible only if in read more
                  <button class="btn btn-primary o_read_only" icon="fa-flag" type="object" name="action_click_me"
                          attrs="{'invisible': [('amount_total', '&lt;', 100)]}" string="Read Me"/> -->
                </tree>
              </field>
            </page>
            <page name="tenants" string="Tenants">
              <field name="tenant_ids" nolabel="1">
                <tree create="0" editable="bottom">
                  <field name="name" />
                  <field name="date_of_birth" />
                  <field name="place_of_birth" />
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="realty_tenancy_tree" model="ir.ui.view">
    <field name="name">realty.tenancy.tree</field>
    <field name="model">realty.tenancy</field>
    <field name="arch" type="xml">
      <tree>
        <field name="display_name" />
        <field name="property_id" />
        <field name="date_start" />
        <field name="date_end" />
        <field name="state" />
      </tree>
    </field>
  </record>

  <record id="realty_tenancy_act_window" model="ir.actions.act_window">
    <field name="name">Tenancies</field>
    <field name="res_model">realty.tenancy</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('state', '!=', 'done')]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a new Tenancy
      </p>
    </field>
  </record>

  <record id="realty_tenancy_terminated_act_window" model="ir.actions.act_window">
    <field name="name">Terminated Tenancies</field>
    <field name="res_model">realty.tenancy</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('state', '=', 'done')]</field>
    <field name="context">{}</field>
  </record>

  <menuitem
    id="realty_tenancy_root_menu"
    name="Tenancies"
    parent="realty_management_root_menu"
    sequence="30" />

  <menuitem
    id="realty_tenancy_ongoing_menu"
    name="Ongoing Tenancies"
    action="realty_tenancy_act_window"
    parent="realty_tenancy_root_menu"
    sequence="30" />

  <menuitem
    id="realty_tenancy_terminated_menu"
    name="Terminated Tenancies"
    action="realty_tenancy_terminated_act_window"
    parent="realty_tenancy_root_menu"
    sequence="30" />

</odoo>