<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_realty_management" model="ir.module.category">
            <field name="name">Realty Management</field>
            <field name="description">Category for the Realty Management Apps</field>
        </record>

        <record id="tenancy_agent_group" model="res.groups">
            <field name="name">Tenancy Agents</field>
            <field name="category_id" ref="module_realty_management"/>
        </record>

        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('tenancy_agent_group'))]" />
        </record>

        <record id="tenancy_manager_group" model="res.groups">
            <field name="name">Tenancy Managers</field>
            <field name="implied_ids" eval="[(4, ref('tenancy_agent_group'))]" />
            <field name="category_id" ref="module_realty_management"/>
        </record>

        <record id="property_manager_group" model="res.groups">
            <field name="name">Property Managers</field>
            <field name="implied_ids" eval="[(4, ref('tenancy_manager_group'))]" />
            <field name="category_id" ref="module_realty_management"/>
        </record>

        <record id="tenancy_user_rule" model="ir.rule">
            <field name="name">Tenancies: Agents can only see their own tenancies</field>
            <field name="model_id" ref="model_realty_tenancy"/>
            <field name="groups" eval="[(4, ref('tenancy_agent_group'))]"/>
            <field name="domain_force">[(1, '=', 1)] if user.has_group('realty_management.tenancy_manager_group') else [('user_id', '=', user.id)]</field>
        </record>

    </data>
</odoo>